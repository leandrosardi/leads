<script>
	$(document).ready(function (){
		$('#next').prop('disabled', true);
	});
	$('#industry_name').focus();

	$('#industry_name').on('input', function () {
		value = $(this).val();

		if (value.length > 0) {
			$('#next').prop('disabled', false);

		} else {
			$('#next').prop('disabled', true);
		}
	});

	$('#industry_name').keyup(function(e) {
		switch (e.keyCode) {
			case 8: // Backspace
				$('#next').prop('disabled', true);
			case 9: // Tab
			//case 13: // Enter
			case 37: // Left
			case 38: // Up
			case 39: // Right
			case 40: // Down

				break;
		}
	});

	$('#industry_name').keyup(function(e) {
		switch (e.keyCode) {
			case 13: // Enter
				$('#next').prop('disabled', false);
			case 37: // Left
			case 38: // Up
			case 39: // Right
			case 40: // Down
				break;
		}
	});

