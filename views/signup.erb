<%
err = params[:err]
email = params[:email]
%>
<html>
	<head>
		<meta charset="ISO-8859-1">
		<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
		<title>Free Leads - B2B Leads with Emails and Phone Numbers</title>
		<meta name="description" content="">
		<meta name="viewport" content="width=device-width">

		<link href='https://fonts.googleapis.com/css?family=Open+Sans:400,300' rel='stylesheet' type='text/css'>
		<link rel="stylesheet" href="/leads/css/bootstrap.min.css">
		<style>
			body {
				padding-top: 0px;
				padding-bottom: 40px;
			}

			.top_banner{
				background-image: url('/leads/images/guarda.png');
				height: 16px;
			}
		</style>
		<link rel="stylesheet" href="/leads/css/bootstrap-responsive.min.css">
		<link rel="stylesheet" href="/leads/css/font-awesome.css">
		<link rel="stylesheet" href="/leads/css/launch.css">

		<!--[if lt IE 9]>
		<script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script>
		<script>window.html5 || document.write('<script src="js/html5shiv.js"><\/script>')</script>
		<![endif]-->
	</head>

	<body onload="document.getElementById('id_email').focus();document.getElementById('id_email').select();">

		<div class="top_banner"></div>

		<div class="container">
			<header class="launch-head">
				<h1>Meet New Clients, Today</h1>
				<h2>Get Instant Access to 11M+ B2B Leads<br>with Emails and Phone Numbers.</h2>
			</header>

			<section id="signup-sect">

				<%
				if err.to_s.size > 0
				%>
				<p style='color:red;'><%=err%>.</p>
				<%
				else
				%>
				<p>Enter your email below to get a sample.</p>
				<%
				end # if err.to_s.size > 0
				%>

				<div class="flex-container text-left">


					<form class='fancy-form span5' action="../filter_signup" method="post" style="margin-top: 15px;">
						<fieldset>
							<div class="fields">
								<input id="id_email" name='email' class=" span5 input-block-level" type="text" placeholder="your@email.com" tabindex=1 value='<%=email.to_s.encode_html%>' required>
							</div>
							<button class="btn btn-large btn-primary" type="submit" value='START' tabindex=2>START</button>
						</fieldset>
					</form>
				</div>
			</section>

			<br/>

			<footer id="pagefooter">
				<p class="pull-right" style="margin-left: 20px;">&copy;<%=Date.today.year.to_s%> <%=COMPANY_NAME%>.</p>
			</footer>
		</div> <!-- /container -->

	</body>
</html>